<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_ticky">
    <TextView
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="確認刪除"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/dp_30"/>
        <LinearLayout
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue">
            <TextView
                android:id="@+id/dialog_delete_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:hint="未設定標題"
                android:textColorHint="@color/brown"
                android:background="@color/white"
                android:textStyle="bold"
                android:gravity="center|top|left"
                android:textColor="@color/blue"
                android:textSize="@dimen/dp_15"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/background_gray">
            <ScrollView
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dialog_delete_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="內容"
                    android:textColorHint="@color/brown"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:gravity="center|top|left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/dialog_delete_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_ok"
                android:textColor="@drawable/button_ok_text"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="確認" />
            <android.widget.Button
                android:id="@+id/dialog_delete_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:textColor="@drawable/button_back_text"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="取消" />
        </LinearLayout>
</LinearLayout>
